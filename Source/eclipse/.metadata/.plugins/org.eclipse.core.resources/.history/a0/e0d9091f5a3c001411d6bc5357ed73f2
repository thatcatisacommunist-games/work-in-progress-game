import java.awt.Frame;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.media.opengl.GLCapabilities;
import javax.media.opengl.GLProfile;
import javax.media.opengl.awt.GLCanvas;


public class GL_Game 
{
	public static void main(String[] args)
	{
		GL_Game game = new GL_Game();
		game.CREATE_GL_AND_WINDOW();
		
		
	}
	
	public void CREATE_GL_AND_WINDOW()
	{
		//Load OpenGL
		GLProfile gl = GLProfile.getDefault();
		GLCapabilities cap = new GLCapabilities(gl);
		GLCanvas canvas = new GLCanvas(cap);
		
		//Create a Frame/Window.
		Frame frame = new Frame();
		frame.setSize(500, 500);
		frame.add(canvas);
		frame.setVisible(true);
		frame.setTitle("Work in progress space game engine thing.");
		
		//Close the window when the "X" button is pressed.
		frame.addWindowListener(new WindowAdapter() 
		{
			public void windowClosing(WindowEvent e)
			{
				System.exit(0);
			}
		});
	}
}
